# =============================================================================
# Salesforce AI Assistant — Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Azure AI Foundry
# -----------------------------------------------------------------------------
# Project endpoint from Bicep deployment output (aiFoundryProjectEndpoint)
AZURE_AI_PROJECT_ENDPOINT=https://<project>.services.ai.azure.com/api

# OpenAI model deployment name (default: gpt-4o)
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Key Vault URI from Bicep deployment output (keyVaultUri)
AZURE_KEY_VAULT_URI=https://kv-sfai-dev.vault.azure.net/

# -----------------------------------------------------------------------------
# Salesforce OAuth (Connected App)
# -----------------------------------------------------------------------------
# Consumer Key from your Salesforce Connected App
SF_CONSUMER_KEY=

# Consumer Secret from your Salesforce Connected App
SF_CONSUMER_SECRET=

# Your Salesforce My Domain URL
SF_INSTANCE_URL=https://mycompany.my.salesforce.com

# OAuth callback URL configured in the Connected App
SF_CALLBACK_URL=https://localhost:8443/callback

# -----------------------------------------------------------------------------
# Salesforce Direct Token (Development/Demo Only)
# -----------------------------------------------------------------------------
# Pre-obtained access token — use for local dev instead of full OAuth flow
# Obtain via: sf org display --target-org <alias> --json
SF_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# Application Insights (Optional)
# -----------------------------------------------------------------------------
# Connection string from Bicep deployment output (appInsightsConnectionString)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------
# Transport mode: stdio (default for notebooks) or sse (hosted deployment)
MCP_TRANSPORT=stdio

# MCP server URLs (only when MCP_TRANSPORT=sse)
# Populated by provision_azure.sh from Bicep outputs
MCP_CRM_URL=http://localhost:8000
MCP_KB_URL=http://localhost:8001

# Hosting mode: none (notebooks), appService, or aca
HOSTING_MODE=none
